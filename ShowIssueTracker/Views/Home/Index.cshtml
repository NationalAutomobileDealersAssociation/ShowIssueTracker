@model UploadViewModel

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Post">
    <div class="col-md-12">

        <div class="form-group">
            <label for="firstName">First Name:</label>
            <input type="text" class="form-control" id="firstName"  asp-for="firstName" required>
        </div>
        <div class="form-group">
            <label for="lastName">Last Name:</label>
            <input type="text" class="form-control" id="lastName" asp-for="lastName" required>
        </div>

        <div class="form-group">
            <label for="MiddleName">  Middle Name:</label>
            <input type="text" class="form-control" id="MiddleName" asp-for="MiddleName" >
        </div>
        <div class="form-group">
            <label for="DealershipAffiliation">Dealership Affiliation:</label>
            <input type="text" class="form-control" id="DealershipAffiliation" required asp-for="DealershipAffiliation" >
        </div>

        <div class="form-group">
            <label for="Title">Title:</label>
            <input type="text" class="form-control" id="Title" required asp-for="Title" >
        </div>
        <div class="form-group">
            <label for="city">city:</label>
            <input type="text" class="form-control" id="city" required asp-for="city" >
        </div>

        <div class="form-group">
            <label for="state">state:</label>
            <input type="text" class="form-control" id="state" required asp-for="state" >
        </div>
        <div class="form-group">
            <label for="zip">zip:</label>
            <input type="text" class="form-control" id="zip" required asp-for="zip" >
        </div>

        <div class="form-group">
            <label for="YearsInAutomitive"> Years in automotive retail industry:</label>
            <input type="number" class="form-control" id="YearsInAutomitive" required asp-for="YearsInAutomitive" >
        </div>
        <div class="form-group">
            <label for="ContactEmail">Contact Email:</label>
            <input type="email" class="form-control" id="ContactEmail" required asp-for="ContactEmail" >
        </div>

        <div class="form-group">
            <label for="ContactPhone"> Contact phone number:</label>
            <input type="tel" class="form-control" id="ContactPhone" required asp-for="ContactPhone" >
        </div>

        <div class="form-group">
            <label for="fUpload">Upload Files:</label>
            <input type="file" name="files" multiple id="fUpload" />

        </div>
        <div class="form-group">

            <input type="submit" maxlength="1000000000" value="Upload" id="file"  required  class="btn"/>

        </div>
    </div>
    <script type="text/javascript">

        var uploadField = document.getElementById("file");

        uploadField.onchange = function () {
            if (this.files[0].size > 2000000000) {
                alert("File is too big!");
                this.value = "";
                 return false;
            };
        };
    </script>
</form>