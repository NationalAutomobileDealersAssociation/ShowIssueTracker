@using ShowIssueTracker.Models
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="navbar-fixed">
    <nav class="top-nav top-nav-admin">
        <div class="nav-wrapper ">

            @if (SignInManager.IsSignedIn(User))
            {

                <a href="#" data-activates="nav-mobile" class="button-collapse left-nav show-on-large"><i class="material-icons">menu</i></a>

                <a class="page-title waves-effect">NADA Show Issue Tracker</a>
                <ul class="right hide-on-small-only">

                    <li><a class="waves-effect" href="/Account/Profile"><span class="display-name">@UserManager.GetUserName(User) </span><i class="material-icons right">person</i></a></li>
                    <li><a href="#" data-activates="mobile-demo" class="button-collapse right hide-on-med-and-up right-nav"><i class="material-icons">person</i></a></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                            <a class="waves-effect" href="javascript:document.getElementById('logoutForm').submit()">
                                <i class="material-icons">power_settings_new</i>
                            </a>
                        </form>
                    </li>
                </ul>

                <ul class="right side-nav side-nav-right" id="mobile-demo">

                    <li><a class="waves-effect waves-light" href="/Account/Profile"><i class="material-icons">person</i>My Profile</a></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm2">
                            <a class="waves-effect waves-light" href="#" onclick="$(this).closest('form').submit(); return false;">
                                <i class="material-icons">power_settings_new</i>Logout
                            </a>
                        </form>
                    </li>
                </ul>
            }

        </div>
    </nav>
</div>
<div class="container"></div>